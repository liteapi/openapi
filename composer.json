{
    "name": "liteapi/openapi",
    "description": "Universal OpenApi generator for PHP by LiteApi",
    "license": "MIT",
    "minimum-stability": "stable",
    "authors": [
        {
            "name": "pjpawel",
            "email": "pawel.jan.podgorski@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Liteapi\\Openapi\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Liteapi\\Openapi\\Test\\": "test/"
        }
    },
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "9.5.*",
        "symfony/yaml": "^6.3",
        "phpstan/phpstan": "^1.9"
    },
    "scripts": {
        "unit": "vendor/bin/phpunit src/",
        "stan": "vendor/bin/phpstan analyse",
        "all": [
            "@unit",
            "@stan"
        ]
    }
}
